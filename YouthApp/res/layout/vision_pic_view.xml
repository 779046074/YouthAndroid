<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/black"
        android:orientation="vertical" 
      >
      <!-- Header -->
       <LinearLayout
           android:layout_width="fill_parent"
           android:layout_height="180dip"
           android:layout_marginTop="5dip"
           android:src="@color/black"
           android:orientation="horizontal" 
           >
	           <LinearLayout 
          		   android:layout_width="120dip"
                   android:layout_height="180dip"
                   android:layout_marginRight="5dip"
                   android:layout_marginLeft="5dip"
                  android:src="@color/black"
        	       android:orientation="vertical"
            	   >
                 <ImageView
                       android:id="@+id/vision_grid_iv1"
          			   android:layout_width="120dip"
          			   android:layout_height="85dip"
          			   android:scaleType="fitXY"
                       android:src="@color/black"
            	       />
            	   <ImageView
            	       android:id="@+id/vision_grid_iv2"
            	       android:layout_width="120dip"
          			   android:layout_height="85dip"
                       android:scaleType="fitXY"
					   android:layout_marginTop="5dip"
            	      android:src="@color/black"
            	       />
           	    </LinearLayout>
           	    
	            <LinearLayout 
        	       android:layout_width="fill_parent"
                   android:layout_height="fill_parent"
                   android:layout_marginRight="5dip"
        	       android:background="@color/black"
            	   >

            	 <ImageView
            	     android:id="@+id/vision_grid_iv3"
            	     android:layout_width="fill_parent"
            	     android:layout_height="180dip"
            	     android:scaleType="fitXY"
            	    android:src="@color/black" />
               
           	    </LinearLayout>
           </LinearLayout>
           
    	<!-- Middle -->
           
           <LinearLayout
           android:layout_width="fill_parent"
           android:layout_height="90dip"
           android:layout_marginTop="5dip"
		   android:src="@color/black"
           android:orientation="horizontal"
           >
	            <LinearLayout 
	                android:layout_marginRight="5dip"
                   android:layout_marginLeft="5dip"
	                android:layout_width="120dip"
                    android:layout_height="fill_parent"
	                >
	                 <ImageView
	                   android:id="@+id/vision_grid_iv4"
            	       android:layout_height="85dip"
            	       android:layout_width="120dip"
            	        android:scaleType="fitXY"
            	      android:src="@color/black"
            	       />
	            </LinearLayout>
	            
	            <LinearLayout 
	                android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="5dip"
                    android:gravity="center"
	                >
	                <TextView 
	                   android:id="@+id/vision_grid_tv"
            	       android:layout_height="100dip"
            	       android:layout_width="fill_parent"
            	       android:gravity="center"
            	       android:text="Vision"
            	       android:textSize="35dip"
            	       android:scaleType="fitXY"
            	       android:textColor="@color/white"
	                    />
	            </LinearLayout>
	            
	            
	            
           </LinearLayout>
           
        <!-- Bottom -->
           <LinearLayout
           android:layout_width="fill_parent"
           android:layout_height="180dip"
           android:layout_marginTop="5dip"
           android:layout_marginBottom="5dip"
           android:orientation="horizontal"
          android:src="@color/black"
           >
	            <LinearLayout 
        	       android:layout_width="180dip"
                   android:layout_height="fill_parent"
                   android:layout_marginRight="5dip"
                   android:layout_marginLeft="5dip"
        	       android:background="@color/black"
            	   >
            	   <ImageView
            	       android:id="@+id/vision_grid_iv5"
            	       android:layout_height="fill_parent"
            	       android:layout_width="fill_parent"
            	        android:scaleType="fitXY"
            	      android:src="@color/black"
            	       />
           	    </LinearLayout>
           	    
	            <LinearLayout 
    	           android:layout_marginRight="5dip"
        	       android:layout_width="120dip"
                   android:layout_height="fill_parent"
        	       android:background="@color/black"
        	       android:orientation="vertical"
            	   >
            	 <ImageView
            	     android:id="@+id/vision_grid_iv6"
            	      android:layout_width="120dip"
                      android:layout_height="85dip"
                      android:scaleType="fitXY"
            	     android:src="@color/black"
            	       />
                <ImageView
                   	   android:id="@+id/vision_grid_iv7"
            	       android:layout_marginTop="5dip"
            	     android:layout_width="120dip"
                      android:layout_height="85dip"
                          android:scaleType="fitXY"
            	      android:src="@color/black"
            	       />
           	    </LinearLayout> 
               
       </LinearLayout>
</LinearLayout>
