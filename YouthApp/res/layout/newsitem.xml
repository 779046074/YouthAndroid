<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="fill_parent"
    android:layout_height="match_parent" 
    android:paddingBottom="4dip" 
    android:paddingTop="4dip" 
    android:paddingLeft="12dip"
    android:paddingRight="12dip"
    android:background="@drawable/list_single"
    android:gravity="center"
     >
      <RelativeLayout 
    	android:layout_width="35dip"
    	android:layout_height="fill_parent"
    	android:layout_marginBottom="4dip" 
  	  	android:layout_alignParentRight="true"
  	  	android:id="@+id/newsitemimagelayout"
    	android:gravity="center">
     	<ImageView 
        	android:layout_width="35dip" 
        	android:layout_height="35dip"
        	android:scaleType="fitCenter" 
        	android:src="@color/black"
        	android:id="@+id/newsitemimage"
        /> 
        </RelativeLayout>
     <RelativeLayout 
    	android:layout_width="wrap_content"
    	android:layout_height="fill_parent"
    	android:layout_marginBottom="4dip" 
    	android:layout_alignParentLeft="true"
    	android:orientation="horizontal"
    	android:layout_toLeftOf="@id/newsitemimagelayout"
    	>
      
      <TextView 
	    android:layout_marginLeft="5dip"
        android:text="NewsTitles" 
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content" 
	    android:textSize="18dip" 
		android:layout_alignParentLeft="true"
	    android:textColor="@color/black"
	    android:gravity="left"
	    android:id="@+id/newsitemtitle"
    />    
    
    <TextView 
	    android:layout_marginLeft="5dip"
	    android:layout_marginBottom="5dip"
        android:text="NewsItemComefrom" 
	    android:layout_height="wrap_content" 
	    android:layout_width="wrap_content"
	    android:textSize="10dip" 
		android:layout_alignParentLeft="true"
		android:layout_below="@id/newsitemtitle"
	    android:textColor="@color/black"
	    android:gravity="left"
	    android:id="@+id/newsItemComefrom"
    />
    
    <TextView 
	    android:layout_marginLeft="5dip"
	    android:layout_marginBottom="5dip"
        android:text="publish time" 
	    android:layout_height="wrap_content" 
	    android:layout_width="wrap_content"
	    android:textSize="10dip" 
		android:layout_below="@id/newsitemtitle"
		android:layout_toRightOf="@id/newsItemComefrom"
	    android:textColor="@color/black"
	    android:gravity="left"
	    android:id="@+id/newsItemTime"
    />
         
     </RelativeLayout>
     

	
    
    
</RelativeLayout>